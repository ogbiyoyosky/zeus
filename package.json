{
  "name": "zeus",
  "version": "1.0.0",
  "description": "An API that serves the latest scores of fixtures of matches in a Mock Premier League",
  "repository": {
    "type": "git",
    "url": "https://github.com/ogbiyoyosky/zeus.git"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "typings"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "keywords": [
    "TypeScript",
    "express",
    "nodejs",
    "boilerplate",
    "eslint"
  ],
  "author": "Emmanuel Ogbiyoyo",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run watch-ts",
    "seed": "node dist/db/seeds.js",
    "build-ts": "tsc -p src",
    "postinstall": "tsc -p src && npm run seed",
    "quick-build": "npm run build-ts",
    "serve": "set NODE_ENV=development && node dist/server.js",
    "start-dev": "set NODE_ENV=development && nodemon dist/server.js",
    "lint": "tslint src/**/*.ts -p tsconfig.json",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*{.ts}",
    "test": "set NODE_ENV=test && jest  --runInBand --detectOpenHandles --verbose --forceExit ",
    "coverage": "set NODE_ENV=test && jest --coverage --runInBand --detectOpenHandles --forceExit ",
    "watch-ts": "tsc-watch  --outDir ./dist --onSuccess \"npm run serve\" --lib ES2015 --skipLibCheck"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/mongoose": "^5.7.36",
    "@types/redis": "^2.8.27",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "coveralls": "^3.0.2",
    "cross-env": "^7.0.2",
    "dotenv": "^5.0.1",
    "express": "^4.15.3",
    "express-rate-limit": "^5.1.3",
    "faker": "^5.1.0",
    "helmet": "^3.12.0",
    "http-errors": "^1.8.0",
    "http-status": "^1.4.2",
    "joi": "^17.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.8.2",
    "multer": "^1.4.2",
    "path": "^0.12.7",
    "redis": "^3.0.2",
    "uuidv4": "^6.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.0.36",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.71",
    "@types/node": "^13.13.2",
    "@types/supertest": "^2.0.10",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^3.5.0",
    "istanbul": "^1.0.0-alpha.2",
    "jest": "^26.4.0",
    "jest-express": "^1.12.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^13.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^8.9.0",
    "tsc-watch": "^4.2.3",
    "typescript": "^3.8.3"
  },
  "license": "MIT"
}
